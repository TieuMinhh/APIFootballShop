<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Update user</title>
</head>

<body>
    <div class="update-user">
        <form action="/update-user" method="post">
            <div>
                <label><b>Bạn đang chỉnh sửa</b></label>
            </div>
            <div class="xuong-dong">
                <label>First Name:</label>
                <input type="text" name="firstName" value="<%= dataUser.firstName%>">
            </div>
            <div>
                <label>Last Name:</label>
                <input type="text" name="lastName" value="<%= dataUser.lastName%>">
            </div>
            <div>
                <label>Email:</label>
                <input type="email" name="email" value="<%= dataUser.email%>">
            </div>
            <div>
                <label>Address:</label>
                <input type="text" name="address" value="<%= dataUser.address%>">
            </div>
            <div>
                <input type="text" name="id" hidden value="<%= dataUser.id%>">
                <button type="submit" class="btn-update">Submit</button>
            </div>
        </form>
    </div>
</body>

</html>