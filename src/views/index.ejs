<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Document</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="/upload">Upload file</a>

    </div>


    <div class="w3-container">
        <!-- <%= dataUser %> -->
        <h2>Danh sách user:</h2>

        <table class="w3-table-all w3-hoverable">
            <thead>
                <tr class="w3-light-grey">
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Address</th>

                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < dataUser.length; i++) { %>
                    <tr>
                        <td>
                            <%= dataUser[i].id %>
                        </td>
                        <td>
                            <%= dataUser[i].firstName %>
                        </td>
                        <td>
                            <%= dataUser[i].lastName%>
                        </td>
                        <td>
                            <%= dataUser[i].email %>
                        </td>
                        <td>
                            <%= dataUser[i].address %>
                        </td>
                        <td>
                            <button><a href="/detail/user/<%=dataUser[i].id %>">Detail</a></button>
                        </td>
                        <td>
                            <form action="/edit-user/<%=dataUser[i].id %>" method="get">
                                <button type="submit">Edit</button>
                            </form>
                        </td>
                        <td>
                            <form action="/delete-user" method="post">
                                <input type="text" hidden value="<%=dataUser[i].id %>" name="userId">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <form action="/create-user-new" method="post">
        <div class="from-user">
            <label>Tạo tài khoản user mới</label>
            <div>
                <label>First Name:</label>
                <input type="text" name="firstName">
            </div>
            <div><label>Last Name:</label>
                <input type="text" name="lastName">
            </div>
            <div><label>Email:</label>
                <input type="email" name="email">
            </div>
            <div> <label>Address:</label>
                <input type="text" name="address">
            </div>
            <div>
                <button type="submit" class="button-edit">Submit</button>
            </div>
        </div>
    </form>
</body>

</html>